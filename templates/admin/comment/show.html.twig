{% extends 'adminbase.html.twig' %}

{% block title %} Comment Detail{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ comment.subject }}</td>
            </tr>
            <tr>
                <th>Comment</th>
                <td>{{ comment.comment }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ comment.status }}</td>
            </tr>
            <tr>
                <th>Ip</th>
                <td>{{ comment.ip }}</td>
            </tr>
            <tr>
                <th>UserId</th>
                <td>{{ comment.userId }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>


            <tr>
                <th>Rate</th>
                <td>{{ comment.rate }}</td>
            </tr>
        </tbody>
    </table>

    <div class="col-md-2">
        <a href="{{ path('admin_comment_index') }}" class=" btn btn-block btn-primary">Back to list</a>
    </div>
    <br>
    <div class="col-md-2">
        <a href="{{ path('admin_comment_edit', {'id': comment.id}) }}" class=" btn btn-block btn-primary">Edit</a>
    </div>
    <br>


    {{ include('admin/comment/_delete_form.html.twig') }}
</div>
{% endblock %}
