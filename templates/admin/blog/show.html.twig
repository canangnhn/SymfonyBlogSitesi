{% extends 'adminbase.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
<div class="container-fluid">
    <h1>Show Blog</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ blog.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ blog.title }}</td>
            </tr>
            <tr>
                <th>Keyword</th>
                <td>{{ blog.keyword }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ blog.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img src="{{ asset('uploads') }}/images/{{ blog.image }}" height="100"></td>
            </tr>
            <tr>
                <th>Blog</th>
                <td>{{ blog.details | raw }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ blog.status }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ blog.createdAt ? blog.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Update_at</th>
                <td>{{ blog.updateAt ? blog.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="col-md-2">
     <a href="{{ path('blog_index') }}" class=" btn btn-block btn-primary">back to list</a>
    </div>
    <br>
    <div class="col-md-2">
        <a href="{{ path('blog_edit', {'id': blog.id}) }}" class=" btn btn-block btn-primary">Edit</a>
    </div>
    <br>
    {{ include('admin/blog/_delete_form.html.twig') }}
</div>
{% endblock %}
