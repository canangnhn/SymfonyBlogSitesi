{% extends 'homebase.html.twig' %}

{% block title %}My Blogs{% endblock %}

{% block body %}
    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin(windowURL, windowName, windowFeatures ) {  window.open(windowURL, windowName, windowFeatures);

        }
    </SCRIPT>


    <div class="container">
        <div class="row">

            {{ include('user/usermenu.html.twig') }}
            <div class="col-sm-6 col-md-7 col-md-pull-4">
                <br>
                <h1> My Blogs</h1><br>
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Title</th>
                        <th>Blog</th>
                        <th>Image</th>
                        <th>Gallery</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for blog in blogs %}
                        <tr>
                            <td>{{ blog.id }}</td>
                            <td>{{ blog.title }}</td>
                            <td>{{ blog.description }}</td>
                            <td>
                                <a href="javascript:openWin('{{ path('user_blog_edit',{'id':blog.id}) }}">
                                    {% if blog.image ==null %}
                                        Add Image
                                    {% else %}
                                        <img src="{{ asset('uploads') }}/images/{{ blog.image }}" height="20">
                                    {% endif %}
                                </a>
                            </td>
                            <td>
                                <a href="javascript:openWin('{{ path('user_image_new',{'id':blog.id}) }}','','toolbar=no,location=no,directories=0,status=noto=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=700');">
                                    <img src="{{ asset('assets/admin/img') }}/galery.png" height="40">
                                </a>
                            </td>
                            <td>{{ blog.status }}</td>
                            <td>
                                <a href="{{ path('user_blog_show', {'id': blog.id}) }}" class="btn btn-block btn-primary">Show</a>

                            </td>

                            <td>

                                <a href="{{ path('user_blog_edit', {'id': blog.id}) }}"  class="btn btn-block btn-primary">Edit</a>
                            </td>

                            <td>
                                {{ include('blog/_delete_form.html.twig') }}
                            </td>

                        </tr>


                    {% else %}
                        <tr>
                            <td colspan="10">no records found</td>
                        </tr>
                    {% endfor %}


                    </tbody>
                </table>








            </div>
        </div>
    </div>




{% endblock %}
